{
    "name": "flarum/gdpr",
    "description": "Features for GDPR, PII management",
    "keywords": [
        "extension",
        "flarum",
        "pii",
        "gdpr",
        "export"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel@klabbers.email",
            "homepage": "https://luceos.com"
        },
        {
            "name": "IanM",
            "email": "ian@flarum.org",
            "role": "Developer"
        },
        {
            "name": "Alexander Skvortsov",
            "email": "askvortsov@flarum.org",
            "role": "Developer"
        },
        {
            "name": "Flarum",
            "email": "info@flarum.org",
            "homepage": "https://flarum.org/team"
        }
    ],
    "support": {
        "issues": "https://github.com/flarum/gdpr/issues",
        "source": "https://github.com/flarum/gdpr"
    },
    "require": {
        "php": "8.*",
        "flarum/core": "^1.8.6",
        "nelexa/zip": "^4.0.2"
    },
    "autoload": {
        "psr-4": {
            "Flarum\\Gdpr\\": "src/"
        }
    },
    "replace": {
        "blomstra/gdpr": "*"
    },
    "extra": {
        "flarum-extension": {
            "title": "GDPR Data Management",
            "category": "feature",
            "icon": {
                "image": "resources/logo.svg",
                "backgroundColor": "#EBF1FD",
                "color": "#3a98d0",
                "backgroundSize": "90%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
        },
        "flarum-cli": {
            "modules": {
                "githubActions": true,
                "typescript": true,
                "backendTesting": true,
                "jsCommon": true
            }
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flarum\\Gdpr\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "phpunit -c tests/phpunit.unit.xml",
        "test:integration": "phpunit -c tests/phpunit.integration.xml",
        "test:setup": "@php tests/integration/setup.php",
        "analyse:phpstan": "phpstan analyse",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "test": "Runs all tests.",
        "test:unit": "Runs all unit tests.",
        "test:integration": "Runs all integration tests.",
        "test:setup": "Sets up a database for use with integration tests. Execute this only once.",
        "analyse:phpstan": "Run static analysis"
    },
    "require-dev": {
        "flarum/testing": "^1.0.0",
        "flarum/nicknames": "^1.8",
        "flarum/phpstan": "*"
    }
}
